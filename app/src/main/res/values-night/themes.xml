<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LetMeBeYourChef" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark_style_like_fb</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Theme.LetMeBeYourChef.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LetMeBeYourChef.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LoginsandRegisterDesignXML" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TitulosActionBar" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">23sp</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextyTextViews" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Sub_Titulos" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Sub_Sub_Titulos" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>


    <style name="BotonesTexto" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextoOlvidasteyRegistro" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditTextGeneral" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="dialogAnimation" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>