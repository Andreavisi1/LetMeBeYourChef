<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".prodotto.ProdottoActivity"
            android:background="@color/soft_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout6"
                    >

                <ImageView
                        android:layout_width="200dp"
                        android:padding="20dp"
                        android:background="@drawable/bg_card"
                        android:layout_height="200dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/imageProdotto"
                        />

                <TextView
                        android:text="@string/noInfo"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_card"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tvProductName"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                <TextView
                        android:text="INFO NUTRIZIONALI PER 100gr DI PRODOTTO"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:background="@drawable/bg_card"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView51"/>

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/bg_card">

                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            >

                        <TextView
                                android:text="Calorie [Kcal] : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView34"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingRight="70dp"
                                android:id="@+id/tvCalorie"/>

                    </TableRow>

                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            >

                        <TextView
                                android:text="Carboidrati [gr] : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView46"/>

                        <TextView
                                android:id="@+id/tvCarboidrati"
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="70dp"
                                />

                    </TableRow>

                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            >

                        <TextView
                                android:text="Grassi [gr] : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView49"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvGrassi"
                                android:paddingRight="70dp"/>
                    </TableRow>

                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            >

                        <TextView
                                android:text="Proteine [gr] : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView37"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvProteine"
                                android:paddingRight="70dp"/>

                    </TableRow>

                </TableLayout>

                <TextView
                        android:text="ULTERIORI INFORMAZIONI SUL PRODOTTO"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/bg_card"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView52"/>

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/bg_card"
                        android:gravity="center">>

                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            >

                        <TextView
                                android:text="Brand : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView54"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="70dp"
                                android:id="@+id/tvBrand"/>
                    </TableRow>

                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            >

                        <TextView
                                android:text="Categoria : "

                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView55"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="70dp"
                                android:id="@+id/tvCategory"/>
                    </TableRow>

                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp">

                        <TextView
                                android:text="Descrizione : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView57"/>

                        <TextView
                                android:text="@string/noInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="80dp"
                                android:id="@+id/tvDescription"/>
                    </TableRow>
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        <TextView
                                android:text="Quantità : "
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView58"/>

                        <EditText
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:id="@+id/etQuantita"/>


                    </TableRow>

                </TableLayout>



                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom">

                    <Button
                            android:text="AGGIUNGI \nAL DIARIO"
                            android:background="@drawable/animazione_1"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnAddDiary"
                            android:layout_weight="1"/>

                    <Button
                            android:text="AGGIUNGI \nAI PREFERITI"
                            android:background="@drawable/animazione_1"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnAddPreferiti"
                            android:layout_weight="1"/>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>