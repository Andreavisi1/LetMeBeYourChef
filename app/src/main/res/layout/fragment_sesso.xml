<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.ConosciamociActivity"
        android:background="@color/white">

    <TextView
            android:text="@string/sesso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="40sp" android:textStyle="bold|italic" android:textAlignment="center"
            android:textColor="@color/black" android:textAllCaps="false" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toTopOf="@+id/GruppoRadio_Sesso" app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="80dp"/>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiSesso"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textStyle="bold" android:background="@drawable/animazione_1"
            android:textSize="25sp" android:layout_marginBottom="50dp" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/GruppoRadio_Sesso" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiSesso"
            android:layout_marginBottom="150dp" android:layout_marginStart="70dp" android:layout_marginEnd="70dp">
        <RadioButton
                android:text="Uomo"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_height="55dp" android:id="@+id/rB_uomo"
                android:background="@drawable/input_bg_green"
                android:textSize="30sp" android:textAlignment="center" android:textStyle="bold"/>
        <RadioButton
                android:text="Donna"
                android:layout_width="match_parent"
                android:layout_height="55dp" android:id="@+id/rB_donna"
                android:background="@drawable/input_bg_green"
                android:textSize="30sp" android:textStyle="bold" android:textAlignment="center"/>
    </RadioGroup>
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout9" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">
        <ImageView
                android:src="@drawable/linietta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView6" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView8" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta_grigia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView9" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta_grigia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView17" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta_grigia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView18" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta_grigia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView19" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/linietta_grigia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView20" android:layout_weight="1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>