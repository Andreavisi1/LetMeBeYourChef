<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".autenticazione.ConosciamociActivity">

    <TextView
            android:text="Qual Ã¨ il tuo stile di vita?"
            android:layout_width="330dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="30sp" android:textAlignment="center"
            android:textStyle="bold|italic" android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/liniette"/>

    <RadioGroup
            android:layout_width="200dp"
            android:layout_height="179dp"
            android:id="@+id/GruppoRadio_Obbiettivo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/transparent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.509">
        <RadioButton
                android:text="Sedentario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:id="@+id/rB_sedentario" android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center" android:background="@drawable/input_bg_green"/>
        <RadioButton
                android:text="Poco attivo"
                android:layout_width="200dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" android:id="@+id/rB_pocoattivo" android:textSize="25sp"
                android:textStyle="bold" android:textAlignment="center" android:background="@drawable/input_bg_green"/>
        <RadioButton
                android:text="Attivo"
                android:layout_width="200dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content" android:id="@+id/rB_attivo" android:textAlignment="center"
                android:textSize="25sp" android:textStyle="bold"
                android:background="@drawable/input_bg_green"/>
        <RadioButton
                android:text="Molto attivo"
                android:layout_width="200dp"
                android:layout_height="wrap_content" android:id="@+id/rB_moltoattivo" android:textAlignment="center"
                android:textSize="25sp" android:textStyle="bold"
                android:background="@drawable/input_bg_green"/>

    </RadioGroup>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiObb"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" android:textStyle="bold" android:background="@drawable/animazione_1"
            android:textSize="25sp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="202dp"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/liniette" android:layout_marginTop="10dp">
        <ImageView
                android:layout_width="48dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/color_logo_no_background_logo"
                android:id="@+id/imageView4" android:layout_weight="1"/>
        <TextView
                android:text="Conosciamoci meglio!"
                android:layout_width="154dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"
                android:textStyle="bold" android:textAlignment="center" android:textSize="17sp"
                android:textColor="@color/green_primary_dark"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/liniette" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta" android:id="@+id/imageView10"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView11" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView12" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView13" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView14" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView15" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView16" android:layout_weight="1"/>
    </LinearLayout>
    <Switch
            android:text="Sei un atleta agonistico?"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_height="wrap_content" android:id="@+id/sB_agonistico"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/GruppoRadio_Obbiettivo"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiObb" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="50dp" tools:ignore="UseSwitchCompatOrMaterialXml"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>