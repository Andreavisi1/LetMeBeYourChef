<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/soft_green"
            tools:context=".esercizio.EsercizioRDUActivity">

        <TextView
                android:text="Esercizio"
                android:background="@drawable/bg_card"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tV_esercizio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"/>

        <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tV_esercizio"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="50dp">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_card"
                    android:padding="20dp"
                    android:gravity="center"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/imageView51"/>

            <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="KCal/h:"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        />

                <TextView
                        android:text="0"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tV_kcal_h"
                        />
            </LinearLayout>

            <LinearLayout

                    android:padding="5dp"
                    android:background="@drawable/bg_card"
                    android:id="@+id/layoutQuantita"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Durata [min]: "
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:id="@+id/terreiew17"
                        />

                <EditText
                        android:text="0"
                        android:gravity="center"
                        android:enabled="false"

                        android:inputType="numberSigned"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/eT_durata"
                        />
            </LinearLayout>

            <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout10">

                <Button
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/animazione_1"
                        android:layout_marginRight="5dp"
                        android:text="Elimina"
                        android:textSize="18sp"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_elimina"
                        />

                <Button
                        android:text="Modifica"
                        android:background="@drawable/animazione_1"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_modifica"
                        />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>