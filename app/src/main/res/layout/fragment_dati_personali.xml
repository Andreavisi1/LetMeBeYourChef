<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autenticazione.ConosciamociActivity" android:background="@color/white">

    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="60dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta" android:id="@+id/imageView22"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta" android:id="@+id/imageView23"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta" android:id="@+id/imageView24"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView25" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView26" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView27" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView28" android:layout_weight="1"/>
    </LinearLayout>
    <EditText
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/tE_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tE_surname"
            android:layout_marginBottom="25dp" android:background="@drawable/input_bg_green" android:textSize="25sp"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:hint="Nome" android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.504" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    <EditText
            android:gravity="center"
            android:layout_width="0dp"
            android:inputType="textPersonName"
            android:layout_height="50dp" android:id="@+id/tE_surname"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiDati"
            android:textSize="25sp" android:hint="Cognome"
            android:background="@drawable/input_bg_green" android:textAlignment="center"
            android:textColor="@color/black" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="150dp"/>
    <Button
            android:text="AVANTI"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiDati"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" android:background="@drawable/animazione_1" android:textSize="25sp"
            android:textStyle="bold"/>
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/linearLayout3"
            android:background="@drawable/input_bg_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tE_name"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">
        <TextView
                android:text="Data di nascita:"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:textStyle="bold" android:textSize="19sp" android:textAlignment="center"
                android:textColor="@color/black"/>
        <TextView
                android:text=""
                android:hint="Seleziona data"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_dataNascita" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Dati Personali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="40sp" android:textStyle="bold|italic"
            android:textAllCaps="false" android:textAlignment="center" android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>