<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".autenticazione.ConosciamociActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp" android:id="@+id/linearLayout14">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView30" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView31" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView32" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta"
                android:id="@+id/imageView33" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView34" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView35" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/linietta_grigia"
                android:id="@+id/imageView36" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Qual Ã¨ la tua altezza?"
            android:layout_width="0dp"
            android:layout_height="100dp" android:id="@+id/textView6"
            android:textSize="40sp" android:textAlignment="center"
            android:textStyle="bold|italic" android:textColor="@color/black" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:background="@drawable/input_bg_green"
            app:layout_constraintBottom_toTopOf="@+id/bt_AvantiAltezza" android:layout_marginBottom="200dp"
            android:id="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="50dp">
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:id="@+id/eT_altezza" android:layout_weight="1" android:textSize="30sp"
                android:textAlignment="center" android:hint="130-300" android:textColor="@color/black"/>
        <TextView
                android:text="cm"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:textAlignment="center" android:textStyle="bold" android:textSize="30sp"
                android:textColor="@color/black"/>
    </LinearLayout>
    <Button
            android:text="AVANTI"
            android:background="@drawable/animazione_1"
            android:layout_width="225dp"
            android:layout_height="65dp" android:id="@+id/bt_AvantiAltezza"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="40dp" android:textSize="25sp" android:textAlignment="center"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>